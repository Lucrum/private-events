<h1>Create new event</h1>

<% if @event.errors.any? %>
  <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    

<%= form_with model: @event do |form| %>
  <%= form.label :creator %><br>
  <%= form.text_field :creator, value: @author_name, disabled: true %><br>

  <%= form.label :event_type %><br>
  <%= form.text_field :event_type %><br>

  <%= form.label :location %><br>
  <%= form.text_field :location %><br>

  <%= form.label :time %><br>
  <%= form.datetime_field :time, min: Date.today, value: DateTime.now.strftime('%Y-%m-%dT12:00:00') %><br>

  <%= form.submit %>

<% end %>

<%= link_to "Back to main page", events_path %>