<div class="main">
  <h1><%= "#{@event.name} by #{@event.creator.name}" %></h1>

  <div class="event-info">
    <h3>What?</h3>
    <%= @event.event_type %> <br>
  </div>

  <div class="event-info">
    <h3>Where?</h3>
    <%= @event.location %><br>
  </div>

  <div class="event-info">
    <h3>When?</h3>
    <%= @event.time.strftime("%m/%d/%Y") %><br>
  </div>

  <div class="event-info">
    <h3>Who's coming?</h3>
    <% if @event.attendee.any?%>
      <ul>
        <% @event.attendee.each do |attendee| %>
          <li>
            <%= attendee.name %>
          </li>
        <% end %>
      </ul>
    <% else %>
      No one yet...
    <% end %>
  </div>

  <div>
    <%= link_to "Back to events", events_path %>
  </div>
</div>